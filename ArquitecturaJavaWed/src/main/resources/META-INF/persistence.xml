<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="UnidadPersona" transaction-type="JTA">
        <class>com.arelance.arquitecturajavawed.domain.Libro</class>
        <class>com.arelance.arquitecturajavawed.domain.Persona</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <jta-data-source>jdbc/arquitecturajava</jta-data-source>
        <properties>
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.logging.parameters" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
